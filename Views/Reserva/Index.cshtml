@model IEnumerable<biblioteca_hotel.Clases.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<h2>Lista de Reservas</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> <strong>Error:</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Crear" class="btn btn-primary">Nueva Reserva</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Fecha Entrada</th>
            <th>Fecha Salida</th>
            <th>Número Huéspedes</th>
            <th>Estado</th>
            <th>Precio Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Cliente?.Nombre @item.Cliente?.Apellido</td>
                <td>@item.FechaEntrada.ToString("dd/MM/yyyy")</td>
                <td>@item.FechaSalida.ToString("dd/MM/yyyy")</td>
                <td>@item.NumHuespedes</td>
                <td>
                    <span class="badge @(item.Estado?.Nombre == "Confirmada" ? "bg-success" : item.Estado?.Nombre == "Cancelada" ? "bg-danger" : "bg-warning")">
                        @item.Estado?.Nombre
                    </span>
                </td>
                <td>@item.PrecioTotal.ToString("C")</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    @if (item.Estado?.Nombre == "Pendiente")
                    {
                        var horasRestantes = (item.FechaEntrada - DateTime.Now).TotalHours;
                        var puedeCancelar = horasRestantes >= 24;

                        <form asp-action="Confirmar" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Confirmar</button>
                        </form>

                        @if (puedeCancelar)
                        {
                            <form asp-action="Cancelar" method="post" style="display:inline;"
                                  onsubmit="return confirm('¿Está seguro de cancelar esta reserva?');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Cancelar</button>
                            </form>
                        }
                        else
                        {
                            <button type="button"
                                    class="btn btn-secondary btn-sm"
                                    disabled
                                    title="No se puede cancelar. Debe hacerlo con al menos 24 horas de anticipación. Tiempo restante: @horasRestantes.ToString("F1") horas">
                                Cancelar
                            </button>
                        }
                    }
                    else if (item.Estado?.Nombre == "Confirmada")
                    {
                        var horasRestantes = (item.FechaEntrada - DateTime.Now).TotalHours;
                        var puedeCancelar = horasRestantes >= 24;

                        @if (puedeCancelar)
                        {
                            <form asp-action="Cancelar" method="post" style="display:inline;"
                                  onsubmit="return confirm('¿Está seguro de cancelar esta reserva confirmada?');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Cancelar</button>
                            </form>
                        }
                        else
                        {
                            <button type="button"
                                    class="btn btn-secondary btn-sm"
                                    disabled
                                    title="No se puede cancelar. Debe hacerlo con al menos 24 horas de anticipación. Tiempo restante: @horasRestantes.ToString("F1") horas">
                                Cancelar
                            </button>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

